Turn Ship and set Acceleration
  ~ #html/event/key-down
  turnleft = #html/event/key-down.key == "a"
  turnright = #html/event/key-down.key == "d"
  left = #html/event/key-down.key == "ArrowLeft"
  right = #html/event/key-down.key == "ArrowRight"
  up = #html/event/key-down.key == "ArrowUp"
  down = #html/event/key-down.key == "ArrowDown"
  #spaceship.oa{turnleft} := -1.5
  #spaceship.oa{turnright} := 1.5
  #spaceship.vy{up} := #spaceship.vy + 0.8
  #spaceship.vy{down} := #spaceship.vy - 0.8
  #spaceship.vx{left} := #spaceship.vx - 0.8
  #spaceship.vx{right} := #spaceship.vx + 0.8

Set Spaceship Velocity and Turn Speed
  ~ #time/timer.ticks{1}
  #spaceship.vy := #spaceship.vy + #spaceship.ay 
  #spaceship.vx := #spaceship.vx + #spaceship.ax
  #spaceship.orientation := #spaceship.orientation + #spaceship.oa
  #spaceship.direction := #spaceship.direction - #spaceship.oa

Set acceleration to 0 on Key up
  ~ #html/event/key-up
  upup = #html/event/key-up.key == "ArrowUp"
  downup = #html/event/key-up.key == "ArrowDown"
  #spaceship.ay{upup} := 0
  #spaceship.ax{upup} := 0
  #spaceship.ay{downup} := 0
  #spaceship.ax{downup} := 0

Slow down ship with friction
  ~ #time/timer.ticks{1}
  #spaceship.vy := #spaceship.vy * #spaceship.friction
  #spaceship.vx := #spaceship.vx * 0.97
  #spaceship.oa := #spaceship.oa * 0.97

Move ship and asteroid
  ~ #time/timer.ticks{1}
  #spaceship.x := #spaceship.x + #spaceship.vx
  #spaceship.y := #spaceship.y - #spaceship.vy
  #asteroid.x := #asteroid.x + 0.5
  #asteroid.y := #asteroid.y - 0.5
  #child.x := #child.x + 1
  #child.y := #child.y + 1
  #grandchild.x := #grandchild.x - 2
  #grandchild.y := #grandchild.y - 2

Change postion when ship goes off screen
  ~ #time/timer.ticks{1}
  srx = #spaceship.x > (570)
  #spaceship.x{srx} := #spaceship.x - 555
  slx = #spaceship.x < (10)
  #spaceship.x{slx} := #spaceship.x + 555
  sdy = #spaceship.y > (320)
  #spaceship.y{sdy} := #spaceship.y - 310
  suy = #spaceship.y < (10)
  #spaceship.y{suy} := #spaceship.y + 310
 
Change position when asteroid goes off screen 
  ~ #time/timer.ticks{1}
  arx = #asteroid.x > (570)
  #asteroid.x{arx} := #asteroid.x - 555
  alx = #asteroid.x < (10)
  #asteroid.x{alx} := #asteroid.x + 555
  ady = #asteroid.y > (320)
  #asteroid.y{ady} := #asteroid.y - 310
  auy = #asteroid.y < (10)
  #asteroid.y{auy} := #asteroid.y + 310
  crx = #child.x > (570)
  #child.x{crx} := #child.x - 555
  clx = #child.x < (10)
  #child.x{clx} := #child.x + 555
  cdy = #child.y > (320)
  #child.y{cdy} := #child.y - 310
  cuy = #child.y < (10)
  #child.y{cuy} := #child.y + 310
  grx = #grandchild.x > (570)
  #grandchild.x{grx} := #grandchild.x - 555
  glx = #grandchild.x < (10)
  #grandchild.x{glx} := #grandchild.x + 555
  gdy = #grandchild.y > (320)
  #grandchild.y{gdy} := #grandchild.y - 310
  guy = #grandchild.y < (10)
  #grandchild.y{guy} := #grandchild.y + 310